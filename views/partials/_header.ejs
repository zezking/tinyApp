<head>
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@900&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <style>
    .navbar-custom .navbar-brand,
    .navbar-custom .navbar-text {
      color: white;
    }
  </style>
</head>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
    <a class="navbar-brand" href="#">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <spatn class="navbar-toggler-icon"></spatn>
    </button>

    <% if(user){ %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/urls">My URLs</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/urls/new">Create New URL</a>
      </li>
    </ul>

    <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
      <a class="nav-link" style="font-weight: bold"
        >You are log in as <span><%= user.email %></span></a
      >
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
        Logout
      </button>
    </form>
    <% } else{ %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/urls"></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls/new"></a>
        </li>
      </ul>
      <form method="GET" action="/login" class="form-inline my-2 my-lg-0">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
          Login
        </button>
      </form>
      <form method="GET" action="/register" class="form-inline my-2 my-lg-0">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
          Register
        </button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
